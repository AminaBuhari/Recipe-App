<section class="container col-10">
    <%= form_with(model: @ingredient, url: user_recipe_ingredients_url, method: :post, local: true ) do |form| %>

        <select name='food_id' id='food_id' class="form-select form-select-lg mb-3" aria-label=".form-select-lg">
            <option selected>Select From Food List</option>
            <% @foods.each do |food| %>
            <option value=<%= food.id %>><%= food.name %></option>
            <% end %>
        </select>

        <div class=" mb-4 w-30">
            <strong><%= form.label :quantity, "Quantity(grams)", style: "display: block" %></strong>
            <%= form.number_field :quantity, placeholder: "Quantity", required: true, :class => "form-control" %>
        </div>

        <%= form.hidden_field :recipe_id, value: @recipe.id %>

        <div class="text-center">
            <%= form.submit "Add Ingredient", class: "btn btn-primary" %>
        </div>

    <% end %>
</section>

<br>

