<p style="color: green"><%= notice %></p>

<%= render @user %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user) %> |
  <%= link_to "Back to users", users_path %>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
<section class="container my-5">
  <div class="row">
    <div class="user-image">
    <%=image_tag("https://source.unsplash.com/200x200/?img=#{@user.id}", class: 'user--imagr', alt: 'user picture')%>
    </div> 
      
      <div class="col-10 p-2">
        <div class="d-flex justify-content-between">
          <h3><%= @user.name %></h3>
          <%= link_to "Edit", edit_user_path(@user), class: "text-decoration-none" %>
        </div>
      </div>
  </div>
  <div class="actions m-3 text-center">
    <%= link_to "Account settings", edit_user_registration_path, class: "text-decoration-none btn btn-outline-primary" %>
  </div>
</section>

<div class="mb-3 px-5">
  <%= link_to "< Back", :back, class: "text-decoration-none" %>
</div>