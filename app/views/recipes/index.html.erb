<p style="color: green"><%= notice %></p>
<%= render partial: 'partials/nav' %>
<h1 class="text-center p-3">Recipes</h1>

<ul id="recipes" class="container list-group">
  <% if user_signed_in? %>
    <div class="text-end py-2">
      <%= link_to "New recipe", new_user_recipe_path, class: "btn btn-dark" %>
    </div>
  <% end %>

  <% @recipes.each do |recipe| %>
    <li class="list-group-item mb-3 d-flex">
      <div class="col-2 ps-2">
        <p>
          <%= link_to recipe.name, recipe_path(recipe), class: "text-decoration-none" %>
        </p>
        <% if can? :destroy, recipe%>
          <p>
            <%= button_to "Remove", recipe, method: :delete, class: "btn bg-danger text-white" %>
          </p>
        <% end %>
      </div>
      <p class="col-10 ps-4">
        <%= recipe.description %>
      </p>
    </li>
  <% end %>
</ul>

<div class="m-3 py-3 px-5">
  <%= link_to "< Back", :back, class: "text-decoration-none" %>
</div>