
<%= render partial: 'partials/nav' %>
<h1 class="text-center">Foods</h1>
  <%= link_to "Add Food", new_user_food_path, class: "btn btn-primary my-2 float-end m-4" %>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
          <%= render food %>
      <% end %>
    </tbody>
  </table>
  <p class="text-center my-5">You can only view your food.</p>

